<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <script
      src="https://kit.fontawesome.com/42a182743f.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- CSS -->
    <link rel="stylesheet" href="/css/form.css" />

    <title>Register</title>
    <style>
      body {
        background: url('https://images.unsplash.com/photo-1465146344425-f00d5f5c8f07?w=900&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NHx8bmF0dXJlfGVufDB8fDB8fHww') no-repeat center center fixed; /* Replace 'your-image-url.jpg' with your actual image URL */
        background-size: cover;
        font-family: "Open Sans", sans-serif;
      }
    </style>
  </head>
  <body>
    <!-- nav -->
     
    <%-include('../partials/navbar.ejs') %>
    <div class="form-container">
      <!-- icon -->
      <h1>
        Register
        <i class="fas fa-user-plus"></i>
      </h1>

      <%if(error){%>
      <small class="error">
        <i class="fas fa-exclamation-circle"></i>
        <%=error%>
      </small>
      <%}%>

      <form action="/api/v1/users/register" method="POST">
        <!-- full name -->
        <label for="name">Full Name</label>
        <input type="text" name="fullname" />
        <!-- email -->
        <label for="email">Email</label>
        <input type="email" name="email" />

        <label for="password">Password</label>
        <input type="password" name="password" />

        <button type="submit">Register</button>

        <p>Already have an account? <a href="/register">Login</a></p>
      </form>
    </div>
    <!-- footer -->
    <%-include('../partials/footer.ejs') %>
  </body>
</html>
